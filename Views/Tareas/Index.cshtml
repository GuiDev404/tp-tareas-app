@{
    ViewData["Title"] = "Tareas";
}

<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Tarea</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p> Complete los campos marcados como requeridos (*)  </p>

        <form id="modalForm">
            <input type="hidden" id="tareaId" value="0" />

            <div class="mb-3">
                <label for="descripcion" class="form-label">Descripcion *</label>
                <textarea type="text" class="form-control" id="descripcion" placeholder="Ingrese una descripcion para la tarea" rows="3"></textarea>
            </div>
            <div class="mb-3">
                <label for="fecha" class="form-label">Fecha *</label>
                <input type="date" id="fecha" class="form-control"  />
            </div>
            <div class="mb-3">
                <label for="fecha" class="form-label">Prioridad *</label>
                   <select
                      id="prioridad"
                      class="form-control" 
                      asp-items="@ViewBag.Prioridades"
                   >
                </select>
 
            </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" onclick="guardarTarea()">Guardar</button>
      </div>
    </div>
  </div>
</div>


<header class="d-flex justify-content-between align-items-center">
    <h1 class="">Tareas</h1>
    
    <button type="button" class="btn btn-dark position-relative" data-bs-toggle="modal" data-bs-target="#modal" id="btn_add_edit_tarea">
         Nueva tarea
    
    </button>
</header>

<table class="table table-striped table-hover">
  <thead class="table-dark">
    <tr>
        <th> Descripcion </th>
        <th> Fecha </th>
        <th> Prioridad </th>
        <th> Realizada </th>
        <th> </th>
    </tr>
  </thead>
  <tbody id="tBody">
    
  </tbody>
</table>


@section Scripts {
    <script src="~/js/tareas.js"></script>
}