@{
    ViewData["Title"] = "Tareas";
    Layout = "../Shared/_LayoutTareas.cshtml";
}

<div class="container my-3 mx-2">

  <header class="d-flex justify-content-between align-items-center">
      <h1 class="h2 fw-bold">Tarea</h1>
      
      @* <button type="button" class="btn btn-dark" data-bs-toggle="modal" data-bs-target="#modal">
          Nueva Tarea
      </button> *@
  </header>

  <main>
    <form id="modalForm">
        <input type="hidden" id="tareaId" value="0" />

        <div class="mb-3">
            <label for="titulo" class="form-label">Titulo</label>
            <input type="text" class="form-control" id="titulo" placeholder="Ingrese un titulo para la tarea" />
        </div>

        <div class="mb-3">
            <label for="descripcion" class="form-label">Descripcion</label>
            <textarea class="form-control" id="descripcion" placeholder="Ingrese una descripcion para la tarea" rows="3" style="height: 100px; min-height: 100px; max-height: 100px;"></textarea>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-6 col-12">
              <label for="fecha" class="form-label">Fecha Inicio</label>
              <input type="date" id="fecha" class="form-control" />
          </div>
          <div class="col-md-6 col-12">
              <label for="fecha_vencimiento" class="form-label">Fecha Vencimiento</label>
              <input type="date" id="fecha_vencimiento" class="form-control"  />
          </div>
        </div>

        <div class="mb-3">
            <label for="fecha" class="form-label">Prioridad</label>
              <select
                  id="prioridad"
                  class="form-control" 
                  asp-items="@ViewBag.Prioridades"
              >
            </select>
        </div>
        
        <button type="button" class="btn btn-dark w-25" onclick="guardarTarea()">Guardar</button>
    </form>
  </main>
</div>

