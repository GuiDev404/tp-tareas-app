@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrarse";
}

<div class="row m-0 p-0 d-flex justify-content-center align-items-center">
    
    <div class="col-md-5">
        <h1 class="text-center h2"> @ViewData["Title"] </h1>
        
        <section class="card">

            <form class="card-body" id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="">
                    <label class="form-label" asp-for="Input.Email">Correo</label>
                    <input asp-for="Input.Email" placeholder="Ingrese su correo" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="mt-2">
                    <label class="form-label" asp-for="Input.Password">Contraseña</label>
                    <input asp-for="Input.Password" placeholder="Ingrese su contraseña" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <div class="mt-2">
                    <label class="form-label" asp-for="Input.ConfirmPassword">Confirmar contraseña</label>
                    <input asp-for="Input.ConfirmPassword" placeholder="Ingrese su contraseña nuevamente" class="form-control" autocomplete="new-password" aria-required="true" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <div class="mt-3">
                    <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">
                        Registrarse
                    </button>

                    
                    <p class="mt-3 text-center"> 
                        Ya tienes una cuenta?
                        <a class="" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">
                            Inicia sesión
                        </a>
                    </p>
                </div>
            </form>

        </section>
    </div>

