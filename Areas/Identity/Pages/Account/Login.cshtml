@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar sesión";
}


<div class="row m-0 p-0 d-flex justify-content-center align-items-center">
    
    <div class="col-md-5">
        <h1 class="text-center h2"> @ViewData["Title"] </h1>
        
        <section class="card">
            <form id="account" method="post" class="card-body">

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="">
                    <label asp-for="Input.Email" class="form-label">Correo</label>
                    <input asp-for="Input.Email" placeholder="Ingrese su correo" class="form-control" autocomplete="username" aria-required="true" />
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>
                <div class="mt-2">
                    <label asp-for="Input.Password" class="form-label">Contraseña</label>
                    <input asp-for="Input.Password" placeholder="Ingrese su contraseña" class="form-control" autocomplete="current-password"
                        aria-required="true" />
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>
                
                 <div class="mt-2">
                    <p class="text-start">
                        <a id="forgot-password" asp-page="./ForgotPassword">
                            Olvidaste la contraseña?
                        </a>
                    </p>
                </div> 
                    
                    @*
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" /> *@
                            @* @Html.DisplayNameFor(m => m.Input.RememberMe) *@
                            @* Recordar contraseña? *@
                        @* </label>
                    </div>
                    *@
                <div class="mt-4">
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">
                        Acceder
                    </button>

                    <p class="mt-3 text-center"> 
                        No tienes una cuenta?
                        <a class="" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">
                            Registrate
                        </a>
                    </p>
                </div>
             
                @* <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">
                        Resend email confirmation
                    </a>
                </p> *@
            
            </form>
        </section>
    </div>

